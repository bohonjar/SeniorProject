@{
    ViewData["Title"] = "Dashboard";
    string userName = ViewData["UserName"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            padding-top: 56px;
            padding-bottom: 3rem;
            background-color: lightskyblue;
            font-family: Arial, sans-serif;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: auto;
            line-height: 3rem;
            background-color: black;
            border-top: 1px solid #dee2e6;
            text-align: center;
        }

        .navbar {
            background-color: #fff;
        }

            .navbar .navbar-nav .nav-link {
                color: black;
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #007bff;
                }

            .navbar .navbar-brand {
                color: black;
            }

                .navbar .navbar-brand:hover {
                    color: #007bff;
                }

            .navbar .dropdown-menu {
                background-color: black;
            }

                .navbar .dropdown-menu .dropdown-item {
                    color: white;
                    transition: none;
                }

                    .navbar .dropdown-menu .dropdown-item:hover {
                        color: blue;
                        background-color: transparent;
                    }

        .section {
            background-color: black;
            color: white;
            border-radius: 5px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            padding: 10px;
            margin-bottom: 20px;
            margin-top: 1rem;
        }

        .sidebar {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: black;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            margin-bottom: 10px;
            margin-top: 1rem;
        }

            .sidebar h3 {
                margin-bottom: 20px;
            }

            .sidebar .nav-link {
                color: white;
            }

                .sidebar .nav-link:hover {
                    color: blue;
                }

            .sidebar .user-header {
                color: white;
                font-size: 1.2em;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <div class="sidebar sticky-top">
                    <div class="user-header">
                        Welcome back, @userName!
                    </div>
                </div>
            </div>
            <div class="col-lg-9 mb-4">
                <div class="section">
                    <!-- Content for the dashboard can be added here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+HoX8Ktv5z+Po0iSfka0V6twP1Au5gE2FndcwY6pYFq3e6e+p2EKzI1zzi" crossorigin="anonymous"></script>
</body>
</html>
