@{
    ViewData["Title"] = "User Dashboard";
    string userName = ViewData["UserName"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            overflow: hidden;
            background-color: black;
            font-family: Arial, sans-serif;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: auto;
            line-height: 3rem;
            background-color: #f8f9fa;
            color: black;
            border-top: 1px solid #dee2e6;
            text-align: center;
        }

        .navbar {
            background-color: #f8f9fa;
        }

            .navbar .navbar-nav .nav-link {
                color: #000;
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #007bff;
                }

            .navbar .navbar-brand {
                color: #000;
            }

        .section {
            background-color: black;
            color: #000;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            margin-top: 1rem;
            margin-left: 9rem;
            width: 65rem;
            height: 47.5rem;
        }

        .sidebar {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
            margin-top: 1rem;
        }

            .sidebar h3 {
                margin-bottom: 20px;
            }

            .sidebar .nav-link {
                color: #000;
            }

                .sidebar .nav-link:hover {
                    color: #007bff;
                }

            .sidebar .user-header {
                color: #000;
                font-size: 1.2em;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top">

    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-9 mb-4">
                <div class="section">
                    <iframe frameborder="0" src="https://itch.io/embed-upload/11496411?color=333333" allowfullscreen="" width="1000" height="720"><a href="https://bohonjar.itch.io/cuber">Play Cuber on itch.io</a></iframe>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>