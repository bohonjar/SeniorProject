@model SeniorProject.Models.RegistrationModel

@{
    ViewData["Title"] = "Registration Successful";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Successful</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: black;
            font-family: Arial, sans-serif;
        }

        .modal-dialog {
            display: flex;
            align-items: center;
            min-height: calc(80% - 20rem);
            margin-top: 6.5rem;
            justify-content: center;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: auto;
            line-height: 3rem;
            background-color: #f8f9fa;
            color: #000;
            border-top: 1px solid #dee2e6;
            text-align: center;
        }

        .navbar {
            background-color: #fff;
            color: #000;
        }

            .navbar .navbar-nav .nav-link {
                color: #000;
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #007bff;
                }

            .navbar .navbar-brand {
                color: #000;
            }

            .navbar .dropdown-menu {
                background-color: #fff;
                color: #000;
            }

                .navbar .dropdown-menu .dropdown-item {
                    color: #000;
                    transition: none;
                }

                    .navbar .dropdown-menu .dropdown-item:hover {
                        color: #007bff;
                        background-color: transparent;
                    }

        .modal-header, .modal-footer {
            background-color: #e9ecef;
        }

        .modal-body {
            background-color: #ffffff;
        }

        .card {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top" style="color: black;"></nav>

    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Registration Successful</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Your registration was successful. Here are the details:</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>First Name:</strong> @Model.FirstName</li>
                                        <li class="list-group-item"><strong>Last Name:</strong> @Model.LastName</li>
                                        <li class="list-group-item"><strong>Sex:</strong> @Model.Sex</li>
                                        <li class="list-group-item"><strong>Age:</strong> @Model.Age</li>
                                        <li class="list-group-item"><strong>State:</strong> @Model.State</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                                        <li class="list-group-item"><strong>Username:</strong> @Model.UserName</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index", "Login")" class="btn btn-primary">Login with your new account</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#successModal').modal('show');

            setTimeout(function () {
                window.location.href = '@Url.Action("Index", "Login")';
            }, 30000);
        });
    </script>
</body>
</html>